    {
      "name": "BusinessModelCanvasDef",
      "path": "data/BusinessModelCanvasDef*.csv",
      "note": "by ppkrauss",
      "mediatype": "text/csv",
      "schema": {
        "fields": [
          {
            "name": "SORT",
            "description":"sort order in the fill-the-form activity",
            "type": "integer"
          },
          {
            "name": "ELEMENT",
            "description":"internal element name (label)",
            "type": "string"
          },
          {
            "name": "TITLE",
            "description":"title text (element name)",
            "type": "string"
          },
          {
            "name": "GROUP",
            "description":"internal group label",
            "type": "string"
          },
          {
            "name": "DEFINITION",
            "description":"description of element and synopsis of how to fill it",
            "type": "string"
          }
        ]
      }
    }
  ],
  "csv-header-translation": {
    "ptBR":{"SORT":"ORDEM", "ELEMENT":"ELEMENTO", "TITLE":"TITULO", "GROUP":"GRUPO", "DEFINITION":"DEFINIÇÃO"}
  },
